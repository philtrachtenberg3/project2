  <body>

    <video autoplay muted loop id="myVideo">
      <source
        src="https://res.cloudinary.com/poletto/video/upload/v1660175705/Y2Mate.is_-_Son_elegante_Cubano_en_Paseo_del_PRADO_de_La_Habana_SalsaCubana_SonCubano_SonModerno-CgU3tXJGf-8-720p-1660175447661_vdsuou.mp4"
