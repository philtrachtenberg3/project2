<form action="/videos/{{video._id}}/edit" method="POST">
<label for="title">Title</label>
<input type="text" name="title" value="{{foundVideo.title}}">
<label>Level
    <select name="level" id="level" value="{{foundVideo.level}}">
      <option value="beginner">Beginner</option>
      <option value="intermediate">Intermediate</option>
      <option value="advanced">Advanced</option>
    </select>
  </label>
  <label>
    Duration
    <select name="duration" id="duration" value="{{foundVideo.duration}}">
      <option value="short">Short (0-1.5 minutes)</option>
      <option value="medium">Medium (1.5 - 3 minutes)</option>
      <option value="long">Long(3-10minutes)</option>
      <option value="very-long">Very Long(10+ minutes)</option>
    </select>
  </label>
  <label>Description
    <textarea
      name="Description"
      id="Description"
      cols="30"
      rows="10"
    >
    {{foundVideo.description}}
    </textarea>
  </label>

  <button type="submit">Update Video Information</button>
</form>
<video controls>
        <source src="{{foundVideo.videoUrl}}" type="video/mp4" alt="video" style="width: 15%">
        Your browser does not support the video tag.
</video>