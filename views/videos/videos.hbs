<h1>All Videos</h1>
<nav>
    <a href="/videos-easy">Easy</a>
    <a href="/videos-intermediate">Intermediate</a>
    <a href="/videos-hard">Advanced</a>
</nav>


{{#each video}}
<div>
    <video controls>
        <source src="{{videoUrl}}" type="video/mp4" alt="video" style="width: 15%">
        Your browser does not support the video tag.
    </video>
    <div>
        <h5>{{title}}</h5>
        <p>{{level}}</p>
    </div>
    <form action="/videos/{{id}}/edit" method="post">
        <button type="submit">Edit Video</button>
    </form>
    <form action="/videos/{{id}}/delete" method="post">
        <button type="submit">Delete Video</button>
    </form>
</div>
{{/each}}

